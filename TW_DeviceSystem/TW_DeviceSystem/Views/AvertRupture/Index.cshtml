                                groups: 5,
                                first: false,
                                last: false,
                                theme: '#127FD1'
                            },
                            cols: [
                                [
                                    {
                                        field: 'test1',
                                        title: '全选',
                                        type: 'checkbox'
                                    },
                                    {
                                        field: 'test2',
                                        title: '告警时间'
                                    },
                                    {
                                        field: 'test3',
                                        title: '终端'
                                    },
                                    {
                                        field: 'test4',
                                        title: '告警值'
                                    },
                                    {
