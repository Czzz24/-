                elem: '#test5',
                type: 'datetime'
            });
            laydate.render({
                elem: '#test6',
                type: 'datetime'
            });

            var historyTable = layui.table;
            historyTable.render({
                elem: '#historydata',
                url: '/Scripts/data/fwp.json',
                cellMinWidth: 80,
                even: 'true',
                height: 400,
                page: { //支持传入 laypage 组件的所有参数（某些参数除外，如：jump/elem） - 详见文档
                    layout: ['count', 'prev', 'page', 'next', 'skip'],
                    groups: 5,
                    first: false,
                    last: false,
                    theme: '#127FD1'
                },
                cols: [
                    [
                        {
                            field: 'test1',
                            title: '时间'
                        },
