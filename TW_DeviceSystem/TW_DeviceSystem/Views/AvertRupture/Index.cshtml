    <script type="text/javascript">
        layui.use(['element', 'laydate', 'table'], function () {
            var element = layui.element;
            element.on('tab(demo)', function (data) {
                var index = data.index;
                switch (index) {
                    case 0:
                        break;
                    case 1:
                        var alarmTable = layui.table;
                        alarmTable.render({
                            elem: '#alarmdata',
