
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/common.css" rel="stylesheet" />
    <link href="~/Scripts/layui/css/layui.css" rel="stylesheet" />
    <link href="~/Content/style.css" rel="stylesheet" />
    <script src="~/Scripts/echarts/echarts.js"></script>
    <script src="~/Scripts/jquery-1.8.0.min.js"></script>
</head>
<body>
    <blockquote class="layui-elem-quote layui-text">
        回收站
    </blockquote>
    <div class="content_Area">
        <div class="layui-form">
            <div class="layui-form-item">
                <div class="layui-inline">
                    <label class="layui-form-label">数据类型:</label>
                    <div class="layui-input-inline">
                        <select name="quiz" id="recoveryType" lay-filter="recoveryType" lay-search="">
                            <option value="">请选择回收表</option>
                            <option value="1">用户表</option>
                            <option value="2">组织架构表</option>
                            <option value="3">设备表</option>
                            <option value="4">数据库管理表</option>
                        </select>
                    </div>
                </div>
                <div class="layui-inline">
                    <label class="layui-form-label">搜索关键字:</label>
                    <div class="layui-input-inline">
                        <input type="text" class="layui-input" placeholder="请输入搜索关键词" id="searchText" />
                    </div>
                </div>
                <div class="layui-inline">
                    <button class="layui-btn layui-btn-normal" data-type="reload" id="btnSearch">查询</button>
                </div>
            </div>
            <table class="layui-hide" id="recovery" lay-filter="demo"></table>
        </div>
    </div>
    <script src="~/Scripts/layui/layui.js"></script>
    <script type="text/html" id="barDemo">
        <a class="layui-btn layui-btn-xs" lay-event="reduction">还原</a>
    </script>
    <script type="text/javascript">
        layui.use(['table', 'form'], function () {
            var form = layui.form;
            var table = layui.table;
            
            document.getElementById("btnSearch").addEventListener('click', function () {
                var typeValue = $("#recoveryType").val();
                if (typeValue == null || typeValue == "" || typeValue == "undefined") {
                    layer.alert('请选择回收表!', { title: "提示" });
                    return;
                }
                switch (parseFloat(typeValue)) {
                    case 1:
                        table.render({
                            elem: '#recovery',
                            even: true,
                            url: '/Recovery/GetDelUserList',
                            cellMinWidth: 150,
                            even: 'true',
                            height: 400,
                            id: 'reload',
                            page: true,
                            done: function (res, curr, count) {
                                $("[data-field='Id']").css('display', 'none');
                            },
                            cols: [
                                [
                                    {
                                        field: 'Id',
                                        title: 'ID',
                                    },
                                    {
                                        field: 'userName',
                                        title: '用户名称'
                                    },
                                    {
                                        field: 'userAccount',
                                        title: '用户账号'
                                    },
                                    {
                                        field: 'Phone',
                                        title: '联系电话'
                                    },
                                    {
                                        field: 'Email',
                                        title: '邮箱'
                                    },
                                    {
                                        field: 'orderNo',
                                        title: '排序号'
                                    },
                                    {
                                        field: 'CreateTime',
                                        title: '录入日期',
                                        templet: function (row) { return dateFormat(row.CreateTime); }
                                    },
                                    {
                                        field: 'DelUserName',
                                        title: '删除用户',
                                    },
                                    {
                                        field: 'DelTime',
                                        title: '删除日期',
                                        templet: function (row) { return dateFormat(row.DelTime); }
                                    },
                                    {
                                        field: 'isDel',
                                        title: '是否删除',
                                        templet: function (row) { return checkIsDel(row.isDel); }
                                    },
                                    { fixed: 'right', title: '操作', width: 120, align: 'center', toolbar: '#barDemo' }
                                ]
                            ], where: {
                                searchText: document.getElementById("searchText").value,
                            }
                        });
                        break;
                    case 2:
                        table.render({
                            elem: '#recovery',
                            even: true,
                            url: '/Recovery/GetDelOrganizeList',
                            cellMinWidth: 150,
                            even: 'true',
                            height: 400,
                            id: 'reload',
                            page: true,
                            done: function (res, curr, count) {
                                $("[data-field='Id']").css('display', 'none');
                            },
                            cols: [
                                [
                                    {
                                        field: 'Id',
                                        title: 'ID',
                                    },
                                    {
                                        field: 'name',
                                        title: '节点名称'
                                    },
                                    {
                                        field: 'nodePath',
                                        title: '节点路径'
                                    },
                                    {
                                        field: 'parentId',
                                        title: '父节Id'
                                    },
                                    {
                                        field: 'isElectric',
                                        title: '是否是供电或公司'
                                    },
                                    {
                                        field: 'isLine',
                                        title: '是否是线路'
                                    },
                                    {
                                        field: 'isJoint',
                                        title: '是否是接头'
                                    },
                                    {
                                        field: 'orderNo',
                                        title: '排序号'
                                    },
                                    {
                                        field: 'CreateTime',
                                        title: '录入日期',
                                        templet: function (row) { return dateFormat(row.CreateTime); }
                                    },
                                    {
                                        field: 'DelUserName',
                                        title: '删除用户',
                                    },
                                    {
                                        field: 'DelTime',
                                        title: '删除日期',
                                        templet: function (row) { return dateFormat(row.DelTime); }
                                    },
                                    {
                                        field: 'isDel',
                                        title: '是否删除',
                                        templet: function (row) { return checkIsDel(row.isDel); }
                                    },
                                    { fixed: 'right', title: '操作', width: 120, align: 'center', toolbar: '#barDemo' }
                                ]
                            ], where: {
                                searchText: document.getElementById("searchText").value,
                            }
                        });
                        break;
                    case 3:
                        table.render({
                            elem: '#recovery',
                            even: true,
                            url: '/Recovery/GetDelDeviceList',
                            cellMinWidth: 150,
                            even: 'true',
                            height: 400,
                            id: 'reload',
                            page:true,
                            done: function (res, curr, count) {
                                $("[data-field='Id']").css('display', 'none');
                            },
                            cols: [
                                [
                                    {
                                        field: 'Id',
                                        title: 'ID'
                                    },
                                    {
                                        field: 'TerminalId',
                                        title: '设备ID',
                                        width: 100,
                                    }
                                    , {
                                        field: 'deviceName',
                                        title: '设备名称',
                                        minWidth: 150,
                                    }, {
                                        field: 'bigtypeName',
                                        title: '设备大类',
                                        minWidth: 120,
                                    }, {
                                        field: 'smalltypeName',
                                        title: '设备小类',
                                        minWidth: 200,
                                    }, {
                                        field: 'ElectricName',
                                        title: '供电或公司',
                                        minWidth: 150,
                                    }, {
                                        field: 'LineName',
                                        title: '线路名称',
                                        minWidth: 200,
                                    }, {
                                        field: 'JointName',
                                        title: '接头名称',
                                        minWidth: 200,
                                    }, {
                                        field: 'simNo',
                                        title: 'SIM卡号',
                                        minWidth: 150,
                                    }, {
                                        field: 'orderNo',
                                        title: '排序号'
                                    }, {
                                        field: 'longitude',
                                        title: '经度',
                                        minWidth: 150,
                                    }, {
                                        field: 'latitude',
                                        title: '维度',
                                        minWidth: 150,
                                    }, {
                                        field: 'manufacturer',
                                        title: '生产厂家',
                                        minWidth: 150,
                                    }, {
                                        field: 'Installer',
                                        title: '安装人员',
                                        minWidth: 100,
                                    },
                                     {
                                         field: 'localInstructions',
                                         title: '位置描述',
                                         minWidth: 150,
                                     },
                                    {
                                        field: 'InstallDate',
                                        title: '安装日期',
                                        minWidth: 170,
                                        templet: function (row) { return dateFormat(row.InstallDate); }
                                    },
                                    {
                                        field: 'createTime',
                                        title: '录入日期',
                                        templet: function (row) { return dateFormat(row.createTime); }
                                    },
                                    {
                                        field: 'DelUserName',
                                        title: '删除用户',
                                    },
                                    {
                                        field: 'DelTime',
                                        title: '删除日期',
                                        templet: function (row) { return dateFormat(row.DelTime); }
                                    },
                                    {
                                        field: 'isDel',
                                        title: '是否删除',
                                        templet: function (row) { return checkIsDel(row.isDel); }
                                    },
                                    { fixed: 'right', title: '操作', width: 120, align: 'center', toolbar: '#barDemo' }
                                ]
                            ], where: {
                                searchText: document.getElementById("searchText").value,
                            }
                        });
                        break;
                    case 4:
                        table.render({
                            elem: '#recovery',
                            even: true,
                            url: '/Recovery/GetDelDataBaseList',
                            cellMinWidth: 150,
                            even: 'true',
                            height: 400,
                            id: 'reload',
                            page: true,
                            done: function (res, curr, count) {
                                $("[data-field='Id']").css('display', 'none');
                            },
                            cols: [
                                [
                                    {
                                        field: 'Id',
                                        title: 'ID'
                                    },
                                   {
                                       field: 'projectName',
                                       title: '项目名称',
                                       width: 100,
                                   }
                                    , {
                                        field: 'dataBaseAccount',
                                        title: '数据库账号',
                                        minWidth: 150,
                                    }, {
                                        field: 'dataBasePwd',
                                        title: '数据库密码',
                                        minWidth: 120,
                                    }, {
                                        field: 'dataBaseIP',
                                        title: '数据库地址',
                                        minWidth: 200,
                                    }, {
                                        field: 'dataBaseName',
                                        title: '数据库名称',
                                        minWidth: 150,
                                    }, {
                                        field: 'ElectricName',
                                        title: '供电或公司',
                                        minWidth: 200,
                                    }, {
                                        field: 'LineName',
                                        title: '线路名称',
                                        minWidth: 150,
                                    },
                                    {
                                        field: 'CreateTime',
                                        title: '录入日期',
                                        minWidth: 170,
                                        templet: function (row) { return dateFormat(row.CreateTime); }
                                    },
                                    {
                                        field: 'DelUserName',
                                        title: '删除用户',
                                    },
                                    {
                                        field: 'DelTime',
                                        title: '删除日期',
                                        templet: function (row) { return dateFormat(row.DelTime); }
                                    },
                                    {
                                        field: 'isDel',
                                        title: '是否删除',
                                        templet: function (row) { return checkIsDel(row.isDel); }
                                    },
                                    { fixed: 'right', title: '操作', width: 120, align: 'center', toolbar: '#barDemo' }
                                ]
                            ], where: {
                                searchText: document.getElementById("searchText").value,
                            }
                        });
                        break;
                    default:
                        break;
                }
            })

            var $ = layui.$, active = {
                reload: function () {
                    var searchText = $("#searchText").val();
                    table.reload('reload', {
                        page: { curr: 1 },
                        where: {
                            searchText: searchText,
                        }
                    });
                }
            };

            //监听工具条
            table.on('tool(demo)', function (obj) {
                var data = obj.data;
                if (obj.event === 'reduction') {
                    var url = "/Recovery/reductionData";
                    var typeValue = $("#recoveryType").val();
                    if (typeValue == "" || typeValue == null || typeValue == "undefined") {
                        layer.alert('请选择数据类型', { title: "提示" });
                        return;
                    }
                    typeValue=parseFloat(typeValue);
                    $.ajax({
                        url: url,
                        type: 'post',
                        async: true,
                        data: { typeValue: typeValue, Id: data.Id },
                        dataType: 'json',
                        success: function (data, jqxhr, txtStatus) {
                            if (data.code == 0) {
                                var type = "reload";
                                active[type] ? active[type].call(this) : '';

                                layer.alert(data.msg, { title: "提示" });
                                if (typeValue == 2 || typeValue == 3) {
                                    window.top.initTree();
                                }
                            } else {
                                layer.alert(data.msg, { title: "提示" });
                            }

                        }, error: function (xhr, txtStatus) {
                            console.log(txtStatus);
                        }
                    })
                }
            });

            function checkIsDel(val) {
                var str = "";
                if (val == true) {
                    str = "<span style='color:red'>已删除</span>";
                } else {
                    str = "<span style='color:green'>未删除</span>";
                }
                return str;
            }

            function dateFormat(item) {
                var time = new Date(parseInt(item.substr(6))).Format("yyyy-MM-dd hh:mm:ss");
                return time;
            }

            Date.prototype.Format = function (fmt) {
                var o = {
                    "M+": this.getMonth() + 1, //月份 
                    "d+": this.getDate(), //日 
                    "h+": this.getHours(), //小时 
                    "m+": this.getMinutes(), //分 
                    "s+": this.getSeconds() //秒 
                };
                if (/(y+)/.test(fmt)) { //根据y的长度来截取年
                    fmt = fmt.replace(RegExp.$1, (this.getFullYear() + "").substr(4 - RegExp.$1.length));
                }
                for (var k in o) {
                    if (new RegExp("(" + k + ")").test(fmt)) fmt = fmt.replace(RegExp.$1, (RegExp.$1.length == 1) ? (o[k]) : (("00" + o[k]).substr(("" + o[k]).length)));
                }
                return fmt;
            }
        });
    </script>
</body>
</html>
